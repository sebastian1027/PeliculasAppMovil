<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/small"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtv1"
        android:layout_width="@dimen/AnchoTexto"
        android:layout_height="@dimen/AltoTexto"
        android:text="@string/Welcome"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="@dimen/anchoET"
        android:layout_height="@dimen/altoET"
        android:hint="@string/name"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margen"
        android:layout_below="@id/txtv1"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/etApellido"
        android:layout_width="@dimen/anchoET"
        android:layout_height="@dimen/altoET"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="@string/lastname"
        android:layout_marginTop="@dimen/margen"
        android:layout_below="@id/etNombre"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/etEdad"
        android:layout_width="@dimen/anchoET"
        android:layout_height="@dimen/altoET"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="@string/age"
        android:layout_marginTop="@dimen/margen"
        android:layout_below="@id/etApellido"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/etUsuario"
        android:layout_width="@dimen/anchoET"
        android:layout_height="@dimen/altoET"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="@string/user"
        android:layout_marginTop="@dimen/margen"
        android:layout_toRightOf="@id/etNombre"
        android:layout_below="@id/txtv1"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/etContrasenia"
        android:layout_width="@dimen/anchoET"
        android:layout_height="@dimen/altoET"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/margen"
        android:hint="@string/pass"
        android:layout_below="@id/etUsuario"
        android:layout_toRightOf="@id/etNombre"
        android:inputType="textPassword"
        />
    <Button
        android:id="@+id/btnRegistrate"
        android:layout_width="@dimen/SizeAnchoETLand"
        android:layout_height="@dimen/SizeAltoET"
        android:text="@string/register"
        android:textAllCaps="false"
        android:background="@color/Azul"
        android:textColor="@color/Blanco"
        android:layout_marginTop="@dimen/margen"
        android:layout_below="@id/etEdad"
        />

    <TextView
        android:id="@+id/txtv2"
        android:layout_width="@dimen/AnchoTexto"
        android:layout_height="@dimen/AltoTexto"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/margen"
        android:text="@string/Login"
        android:layout_below="@id/etContrasenia"
        android:layout_toRightOf="@id/etEdad"
        android:layout_alignParentRight="true"
        />
    <ImageView
        android:id="@+id/imvgooglemas"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:layout_marginTop="@dimen/margen"
        android:src="@mipmap/googlemas"
        android:layout_below="@id/txtv2"
        android:layout_toRightOf="@id/btnRegistrate"
        android:layout_alignParentRight="true"
        />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>